<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_user_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUserActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_2_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/app_logo_super_big_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_digihealthlocker"
        android:layout_marginTop="10dp"
        android:textColor="#518085"
        android:textFontWeight="900"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogo" />



    <androidx.cardview.widget.CardView
        android:id="@+id/userRegistration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#55FFFFFF"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/transparent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameOutlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                app:hintAnimationEnabled="true"
                style="@style/CustomTextInputLayout"
                android:textColorHint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userFirstName"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:maxLines="1"
                    android:inputType="textPersonName|textCapWords"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/middleNameOutlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/middle_name"
                app:hintTextColor="@color/black"
                app:hintAnimationEnabled="true"
                style="@style/CustomTextInputLayout"
                android:textColorHint="@color/black"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstNameOutlinedTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userMiddleName"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:inputType="textPersonName|textCapWords"
                    android:imeOptions="actionNext"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameOutlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black"
                style="@style/CustomTextInputLayout"
                android:textColorHint="@color/black"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/middleNameOutlinedTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userLastName"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:inputType="textPersonName|textCapWords"
                    android:imeOptions="actionNext"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userPhoneOrGmailOutlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/black"
                android:hint="@string/enter_email_phone_hint_message_1"
                app:hintAnimationEnabled="true"
                style="@style/CustomTextInputLayout"
                android:textColorHint="@color/black"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastNameOutlinedTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userPhoneOrEmail"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:isCredential="true"
                    android:imeOptions="actionNext"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/createNewPasswordOutlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_new_password_hint_message"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black"
                style="@style/CustomTextInputLayout"
                android:textColorHint="@color/black"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userPhoneOrGmailOutlinedTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userNewPassword"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:isCredential="true"
                    android:imeOptions="actionNext"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmNewPasswordOutlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_new_password_hint_message"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/black"
                style="@style/CustomTextInputLayout"
                android:textColorHint="@color/black"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createNewPasswordOutlinedTextField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userConfirmNewPassword"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:isCredential="true"
                    android:imeOptions="actionDone"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/completeSignUpButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:text="@string/sign_up"
                android:gravity="center"
                app:iconTint="#518085"
                app:iconSize="24dp"
                android:textColor="#518085"
                app:cornerRadius="28dp"
                app:strokeColor="#518085"
                android:backgroundTint="#E8EAF6"
                android:textSize="18sp"
                app:strokeWidth="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmNewPasswordOutlinedTextField"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/featuresContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userRegistration">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/our_features"
            android:textColor="#518085"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/keywordsAnimationContainer"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:clipChildren="false"
            android:layout_marginTop="-10dp"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/keywordsSet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_digital_records"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_your_health_wallet"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_secure_sharing"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/keywordsSet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_your_data_your_control"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_unified_history"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_doctor_sync"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/keywordsSet3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_complete_privacy"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_abha_linked"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_instant_access"
                    android:textColor="#518085"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>